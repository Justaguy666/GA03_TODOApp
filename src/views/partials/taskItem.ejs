<!-- Task Item Component -->
<!-- Usage: Pass 'task' object and 'priorityClass' string when including this partial -->

<div class="relative h-[100px] border-b border-black/20 <%= priorityClass || 'bg-dark-item' %> hover:opacity-90 transition-opacity">
  <div class="flex items-center justify-between h-full px-8">
    
    <!-- Checkbox -->
    <div class="flex items-center gap-4">
      <div class="w-10 h-10 bg-white rounded flex items-center justify-center cursor-pointer hover:scale-110 transition-transform">
        <% if (task.completed) { %>
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none">
            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="#000000"/>
          </svg>
        <% } %>
      </div>
      
      <!-- Task Info -->
      <div class="flex flex-col">
        <span class="font-space text-2xl max-sm:text-sm text-white <%= task.completed ? 'opacity-50' : '' %>" style="text-decoration: underline; text-decoration-color: white;">
          <%= task.description || task.title %>
        </span>
        <% if (task.dueDate) { %>
          <span class="font-space text-sm text-white/60 mt-1">
            Due: <%= task.dueDate %>
          </span>
        <% } %>
      </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex gap-2">
      <!-- Edit Button -->
      <button class="w-[50px] h-[50px] bg-btn-edit rounded hover:bg-btn-edit/80 transition-colors flex items-center justify-center group">
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="rgba(0,0,0,0.6)" stroke-width="2">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
      </button>
      
      <!-- Delete Button -->
      <button class="w-[50px] h-[50px] bg-btn-delete rounded hover:bg-btn-delete/80 transition-colors flex items-center justify-center group">
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="white">
          <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
        </svg>
      </button>
    </div>
    
  </div>
</div>
